<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="8dp"

    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    app:contentPaddingBottom="4dp"
    app:contentPaddingLeft="8dp"
    app:contentPaddingRight="8dp"
    app:contentPaddingTop="8dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"

        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/marfil"

            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/marfil"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="Cliente:"/>
                    <EditText
                        android:id="@+id/edit_view_cliente"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Buscar Cliente"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:maxLines="1"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/animation_editext"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="Observación:"/>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"


                        >
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <EditText
                                android:id="@+id/edit_view_observacion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:background="@drawable/animation_editext"
                                android:inputType="textCapSentences|textMultiLine"
                                android:textColor="@color/black"
                                android:maxLength="200"
                                />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:paddingBottom="10dp"
                    android:id="@+id/modify_viewCredito"
                    >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            >
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorAccent"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:text="Tipo de Pago"/>
                                <EditText
                                    android:id="@+id/edit_view_totalpago"
                                    android:layout_width="fill_parent"
                                    android:layout_height="30dp"
                                    android:background="@drawable/animation_edittext_descuento"
                                    android:inputType="numberDecimal"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:selectAllOnFocus="true"
                                    android:textColor="@color/black"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:gravity="center"

                                    android:hint="0.00" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="15dp"
                                >
                                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/opciones_cobro"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingRight="10dp"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/edit_order_rbt_efectivo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="16dp"
                                        android:checked="true"
                                        android:text="Contado" />

                                    <RadioButton
                                        android:id="@+id/edit_order_rbt_credito"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="false"
                                        android:text="Credito" />
                                </RadioGroup>
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Categoria Precio"/>
                <Spinner
                    android:id="@+id/id_CategoriaPrecioModificacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/keyline_1"
                    android:entries="@array/tipocliente_array"

                    android:paddingTop="11dp"
                    />
                <AutoCompleteTextView
                    android:id="@+id/edit_buscar_producto"
                    android:drawableLeft="@drawable/ic_searchorder"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Seleccionar Productos"
                    android:background="@drawable/animation_autocompletetextview"
                    android:maxLines="1"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"

                    android:paddingBottom="10dp"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_order_scroll"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/edit_view_RecPedidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:scrollbars="vertical"

                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:background="@color/marfil"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"

                    >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/animation_bottoncancel"
                                        >
                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Sub Total Bs"
                                                android:textColor="@color/gray_dark"
                                                android:textSize="14dp"
                                                android:paddingLeft="5dp"
                                                android:textStyle="bold"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                />
                                            <TextView
                                                android:id="@+id/edit_viewdata_MontoTotal"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:text="250.00"
                                                android:textColor="@color/gray_dark"
                                                android:textSize="14dp"
                                                android:paddingRight="4dp"
                                                android:textStyle="bold"
                                                android:layout_gravity="right"
                                                android:gravity="right"
                                                />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/animation_bottoncancel"

                                        >
                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Descuento "
                                                android:textColor="@color/gray_dark"
                                                android:textSize="14dp"
                                                android:paddingLeft="15dp"
                                                android:textStyle="bold"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                />
                                            <TextView
                                                android:id="@+id/edit_view_Descuento"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:text="0.00"
                                                android:textColor="@color/gray_dark"
                                                android:textSize="14dp"
                                                android:paddingRight="10dp"
                                                android:textStyle="bold"
                                                android:layout_gravity="center"
                                                android:gravity="right"
                                                />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="7dp"
                            >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1">

                                            <LinearLayout
                                                android:layout_width="fill_parent"
                                                android:layout_height="fill_parent"

                                                android:orientation="vertical">
                                                <LinearLayout
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="fill_parent"
                                                    >
                                                    <LinearLayout
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="fill_parent"
                                                        android:orientation="horizontal"
                                                        >
                                                        <ImageButton
                                                            android:id="@+id/edit_obtener_fecha"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginTop="4dp"
                                                            android:background="@color/marfil"
                                                            android:paddingLeft="2dp"
                                                            android:paddingRight="10dp"
                                                            android:src="@drawable/ic_calendario"
                                                            tools:ignore="ContentDescription" />
                                                        <TextView
                                                            android:id="@+id/edit_viewdata_fecha"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:ems="6"
                                                            android:layout_gravity="center"
                                                            android:gravity="center"
                                                            android:inputType="date"
                                                            android:hint="dd/mm/yyyy"
                                                            android:background="@drawable/animation_bottoncancel"
                                                            />





                                                    </LinearLayout>
                                                </LinearLayout>
                                            </LinearLayout>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/animation_bottoncancel"
                                        >
                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Total Bs "
                                                android:textColor="@color/gray_dark"
                                                android:textSize="14dp"
                                                android:paddingLeft="5dp"
                                                android:textStyle="bold"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                />
                                            <TextView
                                                android:id="@+id/edit_view_TotalDescuento"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:text="0.00"
                                                android:textColor="@color/gray_dark"
                                                android:textSize="14dp"
                                                android:paddingRight="4dp"
                                                android:textStyle="bold"
                                                android:layout_gravity="center"
                                                android:gravity="right"
                                                />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="6dp"
                            android:paddingTop="2dp"
                            >
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical"
                                android:visibility="gone"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reclamo"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="16dp"
                                    android:paddingLeft="5dp"
                                    android:textStyle="bold"
                                    android:layout_gravity="left"
                                    android:gravity="center"
                                    />
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/animation_editext"
                                    android:maxLines="5"
                                    android:textSize="13dp"
                                    android:lines="3"
                                    android:maxLength="50"
                                    android:id="@+id/edit_update_Reclamo"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            >
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal"

                                >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    >

                                    <Button
                                        android:id="@+id/edit_viewdata_btnUpdatePedido"
                                        android:background="@drawable/animation_riple_edit"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="12dp"
                                        android:text="Modificar" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:id="@+id/btnState"
                                    >
                                    <Button
                                        android:id="@+id/edit_viewdata_btnEntregar"
                                        android:background="@drawable/animation_riple_button"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="12dp"
                                        android:text="Entregar" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    >

                                    <Button
                                        android:id="@+id/edit_viewdata_btnVerCliente"
                                        android:background="@drawable/animation_riple_maps"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="12dp"
                                        android:text="Ubicación" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>



    </LinearLayout>

</android.support.v7.widget.CardView>