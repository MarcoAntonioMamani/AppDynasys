<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_pedidos_card"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="2dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:elevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingBottom="10dp"
        >



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"

            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Pedido # 00001"
                android:id="@+id/view_pedido_nro"
                style="@style/TextAppearance.AppCompat.Menu"
                android:textStyle="bold"
                android:paddingLeft="8dp"
                android:background="@drawable/line_drawable"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/primary_text"
                           android:text="Marco Antonio Mamani Chura"
                           android:id="@+id/view_pedido_nombre"
                           style="@style/TextAppearance.AppCompat.Menu"
                           android:textStyle="italic|bold"
                           android:ellipsize="end"
                           android:maxLines="1"
                           android:paddingLeft="8dp"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/secondary_text"
                           android:maxLines="2"
                           android:id="@+id/view_pedido_direccion"
                           android:textStyle="italic"
                           android:text="Barrio Nueva America entre 7 y 8 anillo, Av Miguel de Cervantes"
                           style="@style/TextAppearance.AppCompat.Caption"
                           android:ellipsize="end"
                           android:paddingLeft="8dp"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/secondary_text"
                           android:maxLines="1"
                           android:id="@+id/view_pedido_Telefono"
                           android:textStyle="italic"
                           android:text="Telf: 78140596"
                           style="@style/TextAppearance.AppCompat.Caption"
                           android:ellipsize="end"
                           android:paddingLeft="8dp"
                           />
                   </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="2dp"
                        android:paddingLeft="3dp"
                        >
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_calendario"
                                tools:ignore="VectorDrawableCompat" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/view_pedido_fecha"
                                android:paddingLeft="1dp"
                                android:textColor="@color/secondary_text"
                                android:text="13 Junio 2019 \n         11:47 "
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"


                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/animation_riple_maps"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorPrimary"
                                android:id="@+id/view_pedido_total"
                                android:text="4,521.5 $"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textStyle="bold"

                                />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@drawable/animation_riple_button"
        android:layout_gravity="bottom"

        />
</android.support.v7.widget.CardView>
