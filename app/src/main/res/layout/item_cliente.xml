<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cvAdd"
    android:layout_width="match_parent"

    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/marfil"
    card_view:cardCornerRadius="4dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:paddingRight="2dp"
    >

    <ImageView
        android:id="@+id/row_cliente_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/row_cliente_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="6dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/row_cliente_img"
        android:maxLength="65"
        android:maxLines="2"
        style="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:text="Marco Antonio Mamani" />

    <TextView
        android:id="@+id/row_cliente_direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_cliente_name"
        android:layout_toEndOf="@+id/row_cliente_img"
        android:text="Barrio las americas"
        android:textColor="@color/secondary_text"
        android:maxLines="2"
        android:maxEms="2"
       style="@style/TextAppearance.AppCompat.Caption" />
    <TextView
        android:id="@+id/row_cliente_telefono"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_cliente_direccion"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/row_cliente_img"
        android:text="Telf: 78140596"
        android:textColor="@color/secondary_text"
        style="@style/TextAppearance.AppCompat.Caption" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/row_cliente_img"
     android:visibility="gone"
        android:background="@color/colorAccent"></View>
</RelativeLayout>

</android.support.v7.widget.CardView>