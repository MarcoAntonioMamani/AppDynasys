<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/marfil"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:contentPaddingLeft="8dp"
    app:contentPaddingRight="8dp"
    app:contentPaddingTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="1dp"
        android:id="@+id/layout_item_efectivo"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/animation_edittext_cantidad"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:id="@+id/view_detalle_efectivo_nropedido"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="13sp"
                        android:paddingTop="4dp"
                        android:text="548"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="13sp"
                        android:paddingTop="4dp"
                        android:id="@+id/view_detalle_efectivo_fecha"
                        android:text="30/09/2020"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="13sp"
                        android:id="@+id/view_detalle_efectivo_cliente"
                        android:paddingTop="4dp"
                        android:text="Marco Antonio Mamani"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_text"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textSize="13sp"
                            android:id="@+id/view_detalle_efectivo_monto"
                            android:paddingTop="4dp"
                            android:textStyle="bold"
                            android:text="500"/>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/view_detalle_efectivo_tipo"
                        android:paddingTop="4dp"
                        android:textStyle="bold"
                        android:background="@drawable/animation_riple_edit"
                        android:text="V"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>