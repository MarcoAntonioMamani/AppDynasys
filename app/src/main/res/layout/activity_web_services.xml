<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/login"
    tools:context=".Login.WebServicesActivity">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="2dp"
       android:layout_gravity="center"
        android:elevation="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        card_view:cardBackgroundColor="@android:color/transparent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"


            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                >
                <TextView
                    android:id="@+id/label_webserviceaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"

                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/PrimariLight"
                    style="@style/StyleNegocios"
                    android:textSize="15dp"
                    android:text="DirecciÃ³n IP Servidor" />
            </LinearLayout>


            <android.support.design.widget.TextInputEditText
                android:id="@+id/webservice_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:ems="10"
                android:inputType="textUri"
                android:hint="Direccion del Servicio"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                style="@style/StyleNegocios"
                android:textSize="19dp"
                android:singleLine="true" />
             <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:paddingTop="20dp"
                 android:paddingBottom="40dp"
                 >
                 <Button
                     android:id="@+id/webservice_savebtn"

                     android:paddingLeft="10sp"
                     android:paddingRight="10sp"
                     android:background="@drawable/animation_riple_maps"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:textColor="@color/white"
                     android:gravity="center"
                     android:textStyle="bold"
                     style="@style/StyleNegocios"
                     android:textSize="14dp"
                     android:text="Actualizar IP Servidor" />
             </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>