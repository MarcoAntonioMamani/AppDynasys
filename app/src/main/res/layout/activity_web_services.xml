<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/colorAccent"
    tools:context=".Login.WebServicesActivity">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="2dp"
       android:layout_gravity="center"
        android:elevation="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"

            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                >
                <TextView
                    android:id="@+id/label_webserviceaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textSize="15sp"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:text="Direccion de Servicio Actual" />
            </LinearLayout>


            <android.support.design.widget.TextInputEditText
                android:id="@+id/webservice_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:ems="10"
                android:inputType="textUri"
                android:hint="Direccion del Servicio"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true" />
             <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:paddingTop="20dp"
                 android:paddingBottom="40dp"
                 >
                 <Button
                     android:id="@+id/webservice_savebtn"

                     android:paddingLeft="10sp"
                     android:paddingRight="10sp"
                     android:background="@drawable/animation_riple_button"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:textColor="@color/white"
                     android:gravity="center"
                     android:textStyle="bold"

                     android:text="Guardar" />
             </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>