<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:paddingTop="20dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="20dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/login"
        android:layout_gravity="center"
        >


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Navigation header"
            app:srcCompat="@drawable/user_menu"
            android:scaleType="fitXY"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_gravity="left|bottom"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/id_nh_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="Marco Antonio Mamani"
            android:textSize="16dp"
            style="@style/CodeFontLogo"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/id_nh_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="thedahnark@gmail.com"
            style="@style/CodeFontLogo"
            android:textSize="18dp"
            android:textColor="@color/white" />

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimary"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        />
</FrameLayout>