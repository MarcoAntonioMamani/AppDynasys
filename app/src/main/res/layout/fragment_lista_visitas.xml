<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Visitas.ListaVisitasFragment">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >


        <SearchView
            android:id="@+id/simpleSearchViewVisita"
            android:layout_width="fill_parent"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:background="@color/blanco"
            android:gravity="center"
            android:queryHint="Buscar aquÃ­" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Visita_CardList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@color/colorSplashText"

            />

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/view_btnaddVisita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        style="@style/Widget.MaterialComponents.FloatingActionButton"

        app:srcCompat="@drawable/ic_add02" />

</FrameLayout>