<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".ListaProductos.ListadoProductoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/marfil"

            android:layout_marginLeft="4dp"

            android:layout_marginRight="4dp"
            app:contentPaddingLeft="4dp"
            app:contentPaddingRight="4dp"
            app:contentPaddingTop="7dp"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/marfil"
                android:paddingTop="10dp"
                android:paddingLeft="2dp"
                android:paddingBottom="2dp"
                >
                <SearchView
                    android:id = "@+id/simpleSearchViewListaProducto"
                    android:layout_width = "fill_parent"
                    android:layout_height = "wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:queryHint = "Buscar aquÃ­"
                    android:background="@color/blanco"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/animation_editext"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:text="Producto"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:text="Cant Inicial"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:text="Cant Final"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:text="Precio"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:text="Stock"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_detalle_lista_productos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:scrollbars="vertical"

            />


    </LinearLayout>
</LinearLayout>